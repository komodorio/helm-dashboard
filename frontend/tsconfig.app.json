{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "allowJs": false,
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "useDefineForClassFields": true
  },
  "include": [
    "src",
    "public/static",
    ".storybook/**/*.ts",
    "public/analytics.js",
    "cypress"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
